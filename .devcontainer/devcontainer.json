{
  "name": "R + Quarto + RStan Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "REditorSupport.r",
        "ms-vscode.cpptools"
      ]
    }
  },
  "forwardPorts": [8787],  // expose RStudio Server
  "remoteUser": "rstudio",
  "postCreateCommand": "Rscript -e 'install.packages(c(\"rstan\", \"bayesplot\"))'"
}
